<!DOCTYPE html>
<html lang="fr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>{% block title %}Dashboard{% endblock %}</title>
    <link rel="stylesheet" href="{{ asset('build/app.css') }}">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.1/css/all.css" integrity="sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr" crossorigin="anonymous">
</head>

<body>
    <div class="container-fluid col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12 p-0">
        <div class="container mw-100">
            <div class="row">

                {# Navigation verticale #}
                <nav id="sidebar" class="col-lg-3 col-xl-2 min-vh-100 position-fixed p-0">
                    <ul class="list-unstyled">
                        <li>
                            <a href="{{ path('dashboard') }}"><img src="/build/static/logo.svg" alt="logo" class="logo-sidebar mr-2"> Dashboard</a>
                        </li>
                        <li>
                            <a href="{{ path('dashboard_projets') }}"><i class="fas fa-laptop pr-2"></i> Projets</a>
                        </li>
                        <li>
                            <a href="{{ path('dashboard_technologies') }}"><i class="fas fa-cogs pr-2"></i>
                                Technologies</a>
                        </li>
                        <li>
                            <a href="{{ path('dashboard_formations') }}"><i class="fas fa-graduation-cap pr-2"></i>
                                Formations</a>
                        </li>
                        <li>
                            <a href="{{ path('dashboard_experience') }}"><i class="fas fa-suitcase pr-2"></i>
                                Expériences</a>
                        </li>
                    </ul>
                </nav>

                {# Contenu page #}
                <div class="col-12 col-sm-12 col-md-12 col-lg-9 col-xl-10 position-absolute contenu-page-dashboard p-0">
                    {# Navbar haut #}
                    <nav class="navbar navbar-expand-lg navbar-dark bg-primary nav-top">
                        <button class="navbar-toggler button-nav-top-dashboard" type="button">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="collapse navbar-collapse d-flex justify-content-end" id="navbarColor01">
                            <ul class="navbar-nav">
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button"
                                        data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        {% for user in users %}
                                            {{ user.username }}
                                        {% endfor %}
                                    </a>
                                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                        <a href="{{ path('dashboard_security_logout') }}" class="nav-link">
                                            <i class="fas fa-sign-out-alt pl-2 pr-2"></i> Déconnexion
                                        </a>
                                    </div>
                                </li>
                            </ul>
                        </div>
                    </nav>

                    {# Contenu #}

                    <div class="container-fluid col-12 col-sm-12 col-md-12 col-lg-11 col-xl-11">
                        <div class="pl-3 pr-3">
                            <h1 class="pt-5 font-weight-bold">{% block titlePage %}{% endblock %}</h1>

                            <div class="row mt-5">
                                {% block body %}{% endblock %}
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

    <script src="{{ asset('build/app.js') }}"></script>

</body>

</html>